#!/usr/bin/env bash

# broken nvidia drivers when using external monitor
# temporary script to downgrade nvidia packages to their last working state

sudo pacman -U \
  "https://archive.archlinux.org/packages/n/nvidia-utils/nvidia-utils-580.82.09-1-x86_64.pkg.tar.zst" \
  "https://archive.archlinux.org/packages/l/lib32-nvidia-utils/lib32-nvidia-utils-580.82.09-1-x86_64.pkg.tar.zst" \
  "https://archive.archlinux.org/packages/n/nvidia-open-dkms/nvidia-open-dkms-580.82.09-1-x86_64.pkg.tar.zst" \
  "https://archive.archlinux.org/packages/n/nvidia-settings/nvidia-settings-580.82.09-1-x86_64.pkg.tar.zst"
