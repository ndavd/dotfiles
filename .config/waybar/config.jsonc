// -*- mode: jsonc -*-
{
    "height": 14,
    "spacing": 4,
    "hyprland/workspaces": {
      "format": "{id}",
      "cursor": true
    },
    "hyprland/window": {
      "format": "{title}"
    },
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [],
    "modules-right": [
        "custom/package_updates",
        "disk",
        "cpu",
        "memory",
        "battery",
        "clock",
        "tray"
    ],
    "tray": {
        "icon-size": 15,
        "spacing": 4,
    },
    "clock": {
        "format": "{:%A, %b %d %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>"
    },
    "cpu": {
        "format": "{usage}% ",
        "tooltip": true
    },
    "disk": {
        "interval": 300,
        "format": "{free} ",
        "tooltip-format": "Used {used} / {total} ({percentage_used}%)"
    },
    "memory": {
        "format": "{used}GiB ",
        "tooltip-format": "Using {percentage}%"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "custom/package_updates": {
        "interval": 300,
        "format": "{text} ",
        "exec": "$XDG_CONFIG_HOME/waybar/get-pending-updates",
        "return-type": "json"
    }
}
