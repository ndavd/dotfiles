// -*- mode: jsonc -*-
{
  "height": 14,
  "spacing": 4,
  "hyprland/workspaces": {
    "format": "{id}",
    "cursor": true
  },
  "hyprland/window": {
    "format": "{title}"
  },
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],
  "modules-center": [],
  "modules-right": [
    "privacy",
    "custom/package_updates",
    "disk",
    "cpu",
    "memory",
    "battery",
    "clock",
    "tray"
  ],
  "tray": {
    "icon-size": 16,
    "spacing": 5
  },
  "clock": {
    "interval": 10,
    "format": "{:%A, %b %d %H:%M}",
    "tooltip-format": "<tt>{calendar}</tt>"
  },
  "cpu": {
    "interval": 30,
    "format": "{usage}% ",
    "tooltip": true
  },
  "disk": {
    "interval": 300,
    "format": "{free} ",
    "tooltip-format": "Used {used} / {total} ({percentage_used}%)"
  },
  "memory": {
    "interval": 30,
    "format": "{used}GiB ",
    "tooltip-format": "Using {percentage}%"
  },
  "battery": {
    "interval": 150,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-alt": "{time} {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ]
  },
  "custom/package_updates": {
    "interval": 300,
    "format": "{text} ",
    "exec": "$XDG_CONFIG_HOME/waybar/get-pending-updates",
    "return-type": "json"
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 16,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 14
      },
      {
        "type": "audio-out",
        "tooltip": true,
        "tooltip-icon-size": 14
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 14
      }
    ],
    "ignore-monitor": true
  }
}
